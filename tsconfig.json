{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es6", "scripthost", "es2017"],
    "target": "es2017",
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}